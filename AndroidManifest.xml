            android:name=".MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:uiOptions="none" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Unlockables"
            android:label="@string/app_name_wrappable"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiPlayWordChoose"
            android:label="@string/title_activity_multi_play_word_choose"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiPlay"
            android:label="@string/title_activity_multi_play"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".CategorySelector"
            android:label="@string/title_activity_category_selector" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".NetPlay"
            android:label="@string/title_activity_net_play" >
            <intent-filter>
            </intent-filter>
        </activity>
    </application>

</manifest>